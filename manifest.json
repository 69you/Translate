{
    "manifest_version": 3,
    "name": "Translate Extension",
    "version": "1.0",
    "description": "Translate zh-TW to zh-CN",
    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite"
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}